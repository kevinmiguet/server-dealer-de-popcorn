{
  "compilerOptions": {
    "allowJs": false,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noEmit": false,
    "noEmitOnError": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "outDir": "./build/",
    "rootDir": "./src/",
  },
  "exclude": [
    "build/"
  ],
  "include": [
    "src/"
  ]
}
